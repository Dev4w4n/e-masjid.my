{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    /* Path mapping for workspace packages */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/types/*": ["./src/types/*"],
      "@masjid-suite/auth": ["../../packages/auth/src"],
      "@masjid-suite/supabase-client": ["../../packages/supabase-client/src"],
      "@masjid-suite/shared-types": ["../../packages/shared-types/src"],
      "@masjid-suite/ui-components": ["../../packages/ui-components/src"],
      "@masjid-suite/ui-theme": ["../../packages/ui-theme/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    { "path": "../../packages/auth" },
    { "path": "../../packages/supabase-client" },
    { "path": "../../packages/shared-types" },
    { "path": "../../packages/ui-components" },
    { "path": "../../packages/ui-theme" }
  ]
}
