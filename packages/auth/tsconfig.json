{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "types": ["node", "vitest/globals"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": false,
    "strict": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "composite": true,
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "tests/**/*"],
  "references": [
    { "path": "../shared-types" },
    { "path": "../supabase-client" }
  ]
}
