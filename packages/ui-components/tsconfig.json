{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "types": ["node", "vitest/globals"],
    "noEmit": false,
    "composite": true,
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "tests/**/*"],
  "references": [
    { "path": "../shared-types" },
    { "path": "../auth" },
    { "path": "../ui-theme" }
  ]
}
